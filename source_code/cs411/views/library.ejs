<% var my_games; %>
<!DOCTYPE html>
<html>
  <head>
    <title>Game Playtime Tracker</title>
    <style>
      .wrapper {
        font-family: Arial, sans-serif;
        background-color: #f6f6f6;
        margin: 0;
        padding: 20px;
      }

      h1 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #0066cc;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
      }

      tr:hover {
        background-color: #f9f9f9;
      }

      tr:nth-child(even) {
        background-color: #ffffff;
      }

      .footer {
        text-align: center;
        margin-top: 30px;
      }

      .footer a {
        color: #666;
        text-decoration: none;
      }

      .footer a:hover {
        color: #333;
      }
    </style>
  </head>
  <%- include('partials/header') %>
  <body>
    <%- include('partials/navbar') %>
    <div class="wrapper">
      <h1><%= user_id %>'s Games</h1>
      <table>
        <tr>
          <th>Game Name</th>
          <th>Play Time</th>
        </tr>

        <% for (var i = 0; i < my_games.length; i++) { %>
        <tr>
          <td><%= my_games[i].name %></td>
          <td><%= my_games[i].played_time %></td>
        </tr>
        <% } %>
      </table>
      <!-- <h3>Statistics</h3> -->
    </div>
  </body>
</html>
